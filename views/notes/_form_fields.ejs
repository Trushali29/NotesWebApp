
<!-- half view  of the new note template -->
<div class="form-group">
    <label for="title">Title</label>
    <input value="<%= note.title %>" required type="text", name="title" id="title" class="form-control" placeholder="Add Title"/>
</div>

<div class="form-group" style="margin-top:2%;">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= note.description %></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
